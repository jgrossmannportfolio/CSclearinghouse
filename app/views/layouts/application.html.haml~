      - [:notice, :error, :success, :warning, :alert].each do |key|
        - unless flash[key].blank?
          %p{ :class => "flash #{key}" }= flash[key] 

      -#
        - if flash[:notice]
          #notice.message= flash[:notice]
        - elsif flash[:warning]
          #warning.message= flash[:warning]
        - elsif flash[:alert]
          #alert.message= flash[:alert]
