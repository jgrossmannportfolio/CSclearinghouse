= javascript_include_tag :defaults
!!! 5
%html
  %div#header
    %head
      %title Colgate Computer Science Clearinghouse
      = stylesheet_link_tag 'application'
      = javascript_include_tag 'application'
      = csrf_meta_tags 

  %body
    %h1.title= link_to "Colgate's Computer Science Clearinghouse", '/home', :id => 'titlelink'
    
    #main
      - [:notice, :error, :success].each do |key|
        - unless flash[key].blank?
          %p{ :class => "flash #{key}" }= flash[key] 

      %div#account_info
        #{@sign_in_status}
        - if user_signed_in?
          = link_to 'Logout', destroy_user_session_path, :method => :delete
          = link_to 'Edit account info', edit_user_registration_path
          = link_to 'My Profile', user_path(current_user)
          = link_to 'Notifications', notifications_path
        - else
          = link_to 'Login', new_user_session_path 
          = link_to 'Create an Account', new_user_registration_path
        %br/
      %div#homeimage
      = render "shared/sidebar"
  = yield
