= javascript_include_tag :defaults
!!! 5
%html
  %div#header
    %head
      %title Colgate Computer Science Clearinghouse
      = stylesheet_link_tag 'application'
      = javascript_include_tag 'application'
      = csrf_meta_tags 

  %body
    %h1.title= link_to "Colgate's Computer Science Clearinghouse", '/home', :id => 'titlelink'
    
    #main
      - if flash[:notice]
        #notice.message= flash[:notice]
      - elsif flash[:warning]
        #warning.message= flash[:warning]
      - elsif flash[:alert]
        #alert.message= flash[:alert]

      %div#account_info
        #{@sign_in_status}
        - if user_signed_in?
          = link_to 'Logout', destroy_user_session_path, :method => :delete
          = link_to 'Edit account info', edit_user_registration_path
          = link_to 'My Profile', user_path(current_user)
        - else
          = link_to 'Login', new_user_session_path 
          = link_to 'Create an Account', new_user_registration_path
        %br/
      %div#homeimage
      = render "shared/sidebar"
  = yield
