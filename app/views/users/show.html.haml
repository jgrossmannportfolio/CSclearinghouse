.content 
  .header #{@user.username}'s Profile
%ul#profile
  %li
    = image_tag @user.avatar.url(:medium)
  %li
    First Name:
  .info#profile
    %span.bold
      First Name:
    = @user.firstname
    .small_spacing
    %span.bold
      Last Name:
    = @user.lastname
    .small_spacing
    %span.bold
      Email:
    = @user.email
    .small_spacing
    %span.bold
      Projects:
    - @user.projects.each do |project|
      %span.page_links= link_to "#{project.title}", project_path(project)
    .small_spacing
    %span.bold
      About Me:
    = @user.aboutme
    .small_spacing
    %span.bold
      Skill Tags:
    - @user.tags.each do |tag|
      %span.tag= tag.name
  .small_spacing
  -if @edit_and_delete
    .buttons
      = button_to 'Edit', edit_user_path(@user), :method => :get
  = link_to 'Back to user list', users_path
