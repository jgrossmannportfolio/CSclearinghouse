%h2 #{@user.username}'s Profile

%ul#profile
  %li
    First Name:
    = @user.firstname
  %li
    Last Name:
    = @user.lastname
  %li
    Email:
    = @user.email
  %li
    Projects:
    - @user.projects.each do |project|
      = link_to "#{project.title}", project_path(project)
  %li
    About Me:
    = @user.aboutme
  %li
    Tags:
    - @user.tags.each do |tag|
      = tag.name

-if @edit_and_delete
  = button_to 'Edit', edit_user_path(@user),:method=>:get
  = button_to 'Delete', user_path(@user), :method => :delete, :confirm => 'Are you sure?'
= link_to 'Back to user list', users_path
