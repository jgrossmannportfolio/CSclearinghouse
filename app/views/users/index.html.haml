
%h1 All Users

%table#users

  %thead
    %tr
      %th Username
      %th First Name
      %th Last Name
      %th Email

  %tbody
    - @users.each do |user|
      %tr
        %td= user.username 
        %td= user.firstname
        %td= user.lastname
        %td= user.email
        %td= link_to "More about #{user.username}", user_path(user)

=link_to 'Add New User', new_user_path
 
