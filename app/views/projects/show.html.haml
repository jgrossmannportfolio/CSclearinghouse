.content
	%h2 Details about #{@project.title}

	.project_info
		%span.project_detail
			Owner:
		= @project.owner
		%span.spacing
		%span.project_detail
			Deadline:
		= @project.deadline.to_formatted_s(:long) unless @project.deadline == nil
		%br/
		.spacing
		.project_detail
			Description:			
		%span.project_description
			= @project.description
		%br/
		.spacing
		%span.project_detail
			Tags:
		-@project.tags.each do |tag|
			%span.tag
				=tag.name
		.spacing
	.buttons
		-if @update_and_delete
			= button_to 'Delete', project_path(@project), :method => :delete, :confirm => 'Are you sure?'			
			= button_to 'Update', edit_project_path(@project), :method => :get
	.page_links 
		= link_to 'Back to project list', projects_path
