.content
  .header Notifications for #{@user.username}
  .table#notifications
    .table_head
      - if @notifications.count != 0
        %span#del Delete
        %span#from From
        %span#subj Subject
        %span#mess Message
      else
        %span#no_notifications You Have No Notifications
    - @notifications.each do |notification|
      .notification_content
        = link_to 'X', notifications_path(notification), :method => :delete, :id => 'notification_delete'
        %span#notification_from #{notification.from}
        %span#notification_subject #{notification.subject}
        %span#notification_message #{notification.message}
      

